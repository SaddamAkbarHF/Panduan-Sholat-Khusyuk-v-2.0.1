<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_green_light">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="30dp"
            android:paddingTop="15dp"
            android:text="Shalat Sunah Rawatib"
            android:textColor="#F7F7F7"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Shalat Sunah Rawatib merupakan shalat sunah yang dikerjakan sebelum atau sesudah shalat fardlu. Jika dikerjakan sebelum sholat fardlu maka disebut shalat sunah qobliyah, sedangkan jika dikerjakan setelah shalat fardlu maka disebut dengan shalat sunah ba’diyah."
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Menurut Hadis Riwayat Muslim Nomor 728, Sabda rasulullah SAW mengenai sholat sunah rawatib ini sebagai berikut : dari Ummu Babibah isteri nabi Muhammad shallallahu alaihi wasalah, beliau berkata : Aku mendegar Rasulullah shallallahu alaihi wasalam bersabda : “Tidaklah seorang muslim mendirikan shalat sunah ikhlas karena ALlah sebanyak dua belas rakaat selain shalat fardhu, melainkan Allah akan membangunkan baginya rumah di Surga”"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Macam shalat sunah rawatib"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Shalat sunah rawatib ada beberapa macam, di bawah ini akan disebutkan macam sholat sunah rawatib lengkap dengan bacaan niatnya. :"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="1. Shalat sunah dua rakaat sebelum shalat shalat subuh (qobliyah)"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Niat shalat qobliyah subuh : Ushalli sunnatash subhi rak’ataini qabliyyatan lillahi Ta’aalaa"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Artinya : Aku shalat sunnah sebelum subuh dua rakaat karena Allah"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="italic"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="2. Shalat sunah dua rakaa sebelum shalat shalat dhuhur (qobliyah)"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Niat shalat qobliyah dhuhur : ushalli sunnata dzhuri rak’ataini qabliyyatan lillahi ta’aalaa"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Artinya : Aku niat shalat sunnah sebelum dzuhur dua rakataa karena Allah."
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="italic"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="3. Shalat sunah dua atau empat rakaat setelah shalat dhuhur (ba’diyah)"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Niat shalat dhuhur ba’diyah untuk dua rakaat : ushalli sunnata dzuhri rak’ataini ba’diyyatal lillaahi ta’aala"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Artinya :  aku niat shalat sunnah sebelum dzuhur dua rakaat karena Allah"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="italic"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Niat shalat dhuhur ba’diyah untuk empat rakaat : ushalli sunnata dzuhri arba’a roka’atin ba’diyyatal lillaahi ta’aala"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Artinya : aku niat shalat sunnah sebelum dzuhur empat rakaat karena Allah"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="italic"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="4. Shalat sunah dua atau empat rakaat sebelum shalat ashar (qobliyah)"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Niat shalat ashar qobliyah untuk dua rakaat : ushalli sunnatal ‘ashri rak’ataini qabliyyatan lillahi ta’aalaa"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Artinya :  aku niat shalat sunnah sebelum ashar dua rakaat karena Allah"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="italic"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Niat shalat ashar qobliyah untuk yang empat rakaat : ushalli sunnata dzuhri arba’a roka’atin ba’diyyatal lillaahi ta’aala"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Artinya :  aku niat shalat sunnah sebelum ashar empat rakaat karena Allah"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="italic"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="5. Shalat sunah dua rakaat setelah shalat magrib (ba’diyah)"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Niat shalat magrib ba’diyah : Ushalli sunnatal maghribi rak’ataini ba’diyyatal lillahi ta’aalaa"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Artinya : aku niat shalat  sunnah sesudah magrib dua raka’at karena Allah"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="italic"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="6. Shalat sunah dua rakaat sebelum shalat isya’ (Qobliyah)"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Niat shalat isyah qobliyah : ushalli sunnatal ‘isyaa’i rak’ataini qobliyyah lillahi ta’aalaa"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Artinya : aku niat shalat sunah sebelum isya’ dua rakaat karena Allah"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="italic"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="7. Shalat sunah dua rakaat setelah shalat isya’ (ba’diyah)"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Niat shalat isya’ ba’diyah : Ushalli sunnatal ‘isyaa’i rak’ataini ba’diyyah lillahi ta’aalaa"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Artinya : aku niat shalat sunah sesudah isyah dua rakaat karena Allah"
            android:textColor="#F7F7F7"
            android:textSize="17dp"
            android:textStyle="italic"
            android:typeface="monospace" />

        <Button
            android:id="@+id/bSumberArtikelSholatSunnahRawatib"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sumber Artikel Sholat Sunnah Rawatib"
            android:textColor="#000000"
            android:textSize="14dp" />
    </LinearLayout>

</ScrollView>